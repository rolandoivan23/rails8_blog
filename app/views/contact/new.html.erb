  <div class="contact-container">
    <section class="form-section">
      <h2>ðŸ“¨ Send a Message</h2>
      <%= form_for(@contact, url: '/submit_contact_form' ) do |form| %>
        <div class="form-group">
          <%= form.label :name, 'Your name' %>
          <%= form.text_field :name, id: 'name', placeholder: 'Your full name' %>
          <% if @contact.errors.present? && @contact.errors.messages[:name].present? %>
            <div class="error">
              <%= @contact.errors.messages[:name].join(', ') %>
            </div>
          <% end %>
        </div>

        <div class="form-group">
          <%= form.label :mail, 'Your Email' %>
          <%= form.email_field :mail, id: 'email', placeholder: 'you@example.com' %>
          <% if @contact.errors.present? && @contact.errors.messages[:mail].present? %>
            <div class="error">
              <%= @contact.errors.messages[:mail].join(', ') %>
            </div>
          <% end %>
        </div>

        <div class="form-group">
          <%= form.label :message %>
          <%= form.text_area :message, id: 'message', rows: 5, placeholder: 'How can I help you?' %>
          <% if @contact.errors.present? && @contact.errors.messages[:message].present? %>
            <div class="error">
              <%= @contact.errors.messages[:message].join(', ') %>
            </div>
          <% end %>
        </div>

        <%= form.submit 'Send' %>
      <% end %>
    </section>
  </div>
